<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<widgets>
	<page id="common">
		<widget id="header">
			<type>header</type>
			<border>none</border>
		</widget>
		<widget id="menu">
			<type>shop_menu</type>
			<border>none</border>
			<isDropDown>on</isDropDown>
		</widget>
                <widget id="searchbar">
			<type>searchBar</type>
			<border>none</border>
		</widget>
		<widget id="loginbar">
			<type>member_login_bar</type>
			<border>none</border>
		</widget>
		<widget id="logo">
			<type>imageWidget</type>
			<src>themes/test_it/./img/nongchang.gif</src>
		</widget>
		<widget id="cartbar">
			<type>member_cart_bar</type>
			<border>none</border>
		</widget>
		<widget id="foothelp">
			<type>staticDataDetail</type>
			<catid>11</catid>
			<id>34</id>
			<custom_page>footer_cont</custom_page>
			<folder>customPage</folder>
		</widget>
	</page>


	<page id="/index.html">
		<widget id="ad1">
			<acid>3</acid>
			<overflow>visible</overflow>
			<bordertitle />
			<border>none</border>
			<type>ad</type>
		</widget>
		<widget id="ad2">
			<acid>3</acid>
			<overflow>visible</overflow>
			<bordertitle />
			<border>none</border>
			<type>ad</type>
		</widget>
               <widget id="jqueryAd">
			<acid>2</acid>
			<overflow>visible</overflow>
			<bordertitle />
			<border>none</border>
			<type>jqueryAdAdvance</type>
		</widget>
		<widget id="category">
			<overflow>visible</overflow>
			<bordertitle>商品分类</bordertitle>
			<border>border1</border>
			<type>goods_cat</type>
		</widget>
		<widget id="hot">
			<bordertitle>热卖商品</bordertitle>
			<border>hot</border>
			<type>goods_list</type>
			<term>{tagid:'1'}</term>
			<setting>{type:'default',goodsImgPosition:'top',
				thumbnail_pic_width:'182',thumbnail_pic_height:'158',
				showGoodsName:'on', goodsNum:5}</setting>
			<overflow>visible</overflow>
		</widget>
		<widget id="pop_goods">
			<bordertitle></bordertitle>
			<border>none</border>
			<type>goods_list</type>
			<overflow>visible</overflow>
			<tabs>
				[
				{title:'疯狂抢购',term:{catid:'6'}},
				{title:'猜你喜欢',term:{catid:'7'}},
				{title:'热卖商品',term:{catid:'8'}},
                                {title:'a',term:{catid:'1'}},
                                {title:'b',term:{catid:'2'}}
				]
			</tabs>
			<setting>{type:'morediv',goodsImgPosition:'top',changeEffect:0,columnnum:5,goodsNum:5,thumbnail_pic_width:'199',thumbnail_pic_height:'142'}</setting>
			<folder>customPage</folder>
			<custom_page>pop_goods</custom_page>
		</widget>
		<widget id="panic_buy">
			<bordertitle>热卖商品</bordertitle>
			<border>hot</border>
			<type>goods_list</type>
			<term>{catid:'1'}</term>
			<setting>{type:'default',goodsImgPosition:'top',
				thumbnail_pic_width:'182',thumbnail_pic_height:'158',
				showGoodsName:'on', goodsNum:5}</setting>
			<overflow>visible</overflow>
		</widget>
	</page>


	<page id="/cart.html">

		<widget id="1">
			<overflow>visible</overflow>
			<border/>
			<type>shop_cart</type>
		</widget>

	</page>

	
	<page id="/default.html">
		<widget id="2">
			<overflow>visible</overflow>
			<border>border5</border>
			<bordertitle>商品分类</bordertitle>
			<type>goods_cat</type>
		</widget>
		<widget id="/goods-(\d+).html">
			<overflow>visible</overflow>
			<border/>
			<type>goods_detail</type>
		</widget>
		<widget id="/search-(.*).html">
			<overflow>visible</overflow>
			<border/>
			<type>goods_search</type>
		</widget>
		
		<widget id="/compare.html">
			<overflow>visible</overflow>
			<border/>
			<type>goods_compare</type>
		</widget>
		<widget id="/package.html">
			<overflow>visible</overflow>
			<border/>
			<type>goods_compare</type>
		</widget>
		<widget id="/brandDetail-(\d+).html">
			<overflow>visible</overflow>
			<border/>
			<type>brand_detail</type>
		</widget>
		<widget id="/brand.html">
			<overflow>visible</overflow>
			<border/>
			<type>brand_list</type>
		</widget>
		<widget id="/search.html">
		
			<overflow>visible</overflow>
			<border/>
			<type>search</type>

		</widget>

		<widget id="/leavewords.html">
 
			<overflow>visible</overflow>
			<border/>
			<type>shop_guestbook</type>
 
		</widget>

		<widget id="/friendslink.html">
			<overflow>visible</overflow>
			<border/>
			<cat_id>1</cat_id>
			<type>friends_link</type>
		</widget>
		<widget id="/package.html">
			<overflow>visible</overflow>
			<border/>
			<cat_id>1</cat_id>
			<type>package</type>
		</widget>
		<widget id="/giftlist.html">
			<overflow>visible</overflow>
			<showtype>list</showtype>
			<border/>
			<type>gift_list</type>
		</widget>
		<widget id="/gift-(\d+).html">
			<overflow>visible</overflow>
			<showtype>detail</showtype>
			<border/>
			<type>gift_list</type>
		</widget>
	</page>


</widgets>
